{
    "compilerOptions": {
        "target": "es6",
        "lib": ["esnext"],
        "allowJs": false,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": false,
        "noImplicitAny": true,
        "sourceMap": true,
        "outDir": "dist"
    },
    "include": ["src"]
}
